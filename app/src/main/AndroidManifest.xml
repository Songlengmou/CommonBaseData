<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.anningtex.commonbasedata">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:name=".data.manger.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:icon">

        <activity
            android:name=".test.eight.EightActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".test.seven.act.SevenActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".test.six.SixActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".test.five.TestFiveActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".test.four.TestFourActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".test.three.TestThreeActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".test.two.TestTwoActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".test.one.TestOneActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.act.MainActivity"
            android:launchMode="singleTask" />
        <activity android:name=".ui.act.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- 相机 -->
            <intent-filter>
                <action android:name="android.media.action.IMAGE_CAPTURE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>